<div class="container mt-4">
  <h1>My Basket</h1>
  <div class="orders">
    <% @orders.each do |order|%>
      <div class="order-card">
        <p class="order-title"><%= order.recipe.title %></p>
        <% unless order.recipe.amounts.empty? %>
        <p class="order-price"><%= order.recipe.amounts.first.ingredient.price %>€</p>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="total-price">
    <% total = 0 %>
    <% @orders.each do |order| %>
      <% order.recipe.amounts.each do |amount| %>
        <% total += amount.ingredient.price %>
      <% end %>
    <% end %>
    <p>Total: <%= total %> €</p>
  </div>
</div>

