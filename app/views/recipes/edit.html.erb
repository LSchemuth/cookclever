<div class="container container-edit">
  <div class="form-wrapper">
    <h1>Ready to update <%= @recipe.title %></h1>
    <%= simple_form_for [ @recipe] do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Update this recipe", class: "btn btn-danger mr-2" %>
    <%= link_to 'Delete this recipe', recipe_path(@recipe), :confirm => 'Are you sure?', :method => :delete, class: "btn btn-primary mr-2" %>
    <%= link_to "Cancel", recipes_my_recipes_path %>
    <% end %>
  </div>
</div>

